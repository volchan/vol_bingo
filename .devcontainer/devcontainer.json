{
  "name": "vol_bingo Development Environment",
  "dockerComposeFile": "docker-compose.yml",
  "service": "app",
  "workspaceFolder": "/workspaces/vol_bingo",
  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2": {
      "moby": false
    },
    "ghcr.io/devcontainers/features/github-cli:1": {},
    "ghcr.io/robbert229/devcontainer-features/postgresql-client:1": {
      "version": "17"
    },
    "ghcr.io/devcontainers/features/node:1": {
      "version": "lts"
    },
    "ghcr.io/michidk/devcontainers-features/bun:1": {
      "version": "1.2.22"
    }
  },
  "forwardPorts": [3000, 5173, 5432],
  "portsAttributes": {
    "3000": {
      "label": "Server (Hono)",
      "onAutoForward": "notify"
    },
    "5173": {
      "label": "Client (React/Vite)",
      "onAutoForward": "notify"
    },
    "5432": {
      "label": "PostgreSQL",
      "onAutoForward": "silent"
    }
  },
  "mounts": [
    "source=${localEnv:HOME}${localEnv:USERPROFILE}/.ssh,target=/home/vscode/.ssh,type=bind,readonly",
    "source=${localEnv:HOME}${localEnv:USERPROFILE}/.gitconfig,target=/home/vscode/.gitconfig,type=bind,readonly",
    "source=${localEnv:HOME}${localEnv:USERPROFILE}/.config/gh,target=/home/vscode/.config/gh,type=bind,readonly",
    "source=vol_bingo_shell_history,target=/usr/local/share/shell-history,type=volume"
  ],
  "remoteEnv": {
    "SSH_AUTH_SOCK": "${localEnv:SSH_AUTH_SOCK}",
    "SSH_AGENT_PID": "${localEnv:SSH_AGENT_PID}"
  },
  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.defaultProfile.linux": "zsh",
        "terminal.integrated.profiles.linux": {
          "zsh": {
            "path": "/bin/zsh"
          }
        },
        "extensions.autoUpdate": true
      },
      "extensions": [
        "biomejs.biome",
        "ms-vscode.vscode-typescript-next",
        "bradlc.vscode-tailwindcss",
        "formulahendry.auto-rename-tag",
        "christian-kohler.path-intellisense",
        "usernamehw.errorlens",
        "ms-vscode.vscode-git-graph",
        "eamodio.gitlens",
        "streetsidesoftware.code-spell-checker",
        "ms-vscode.vscode-folder-source-actions"
      ]
    }
  },
  "initializeCommand": "bash .devcontainer/scripts/init.sh",
  "postCreateCommand": "bash .devcontainer/scripts/create.sh",
  "postAttachCommand": "bash .devcontainer/scripts/attach.sh",
  "remoteUser": "vscode",
  "containerUser": "vscode",
  "updateRemoteUserUID": true
}
