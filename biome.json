{
	"$schema": "https://biomejs.dev/schemas/2.1.4/schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"files": {
		"ignoreUnknown": false
	},
	"formatter": {
		"enabled": true
	},
	"overrides": [
		{
			"includes": ["client/src/routeTree.gen.ts"],
			"formatter": {
				"enabled": false
			},
			"linter": {
				"enabled": false
			}
		}
	],
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"style": {
				"noNonNullAssertion": "off"
			}
		}
	},
	"javascript": {
		"formatter": {
			"enabled": true,
			"quoteStyle": "single",
			"trailingCommas": "all",
			"semicolons": "asNeeded"
		}
	}
}
