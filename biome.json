{
	"$schema": "https://biomejs.dev/schemas/2.2.4/schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"files": {
		"ignoreUnknown": false,
		"includes": [
			"**/*.ts",
			"**/*.tsx",
			"**/*.json",
			"**/*.md",
			"!**/*.gen.ts",
			"!server/drizzle/meta/*"
		]
	},
	"formatter": {
		"enabled": true
	},
	"overrides": [
		{
			"includes": ["client/src/routeTree.gen.ts", "server/drizzle/meta/*"],
			"formatter": {
				"enabled": false
			},
			"linter": {
				"enabled": false
			}
		}
	],
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"style": {
				"noNonNullAssertion": "off"
			}
		}
	},
	"javascript": {
		"formatter": {
			"enabled": true,
			"quoteStyle": "single",
			"trailingCommas": "all",
			"semicolons": "asNeeded",
			"indentStyle": "space",
			"indentWidth": 2
		}
	}
}
